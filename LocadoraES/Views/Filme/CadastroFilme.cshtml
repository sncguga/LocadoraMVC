
@model LocadoraES.Models.Filme
@{
    ViewBag.Title = "CadastroFilme";
}

@using (Html.BeginForm("CadastroFilme", "Filme"))
{
    <br />
    <br />
    <br />
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h4>Preencha os dados do filme</h4>
        </div>
        <div class="panel-body">
            <div hidden>
                @Html.LabelFor(model => model.Id)
                @Html.TextBoxFor(model => model.Id)
            </div>
            <div class="row">
                <div class="form-group col-md-12">
                    @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", placeholder = "Nome do filme" } })
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-12">
                    <label for="DhCriacao">Data de criação</label>
                    @if (Model.DhCriacao.Year < 1500)
                    {
                        <input type="date" value=@DateTime.Now.ToString("yyyy-MM-dd") name="dhCriacao" class="form-control" />
                    }
                    else
                    {
                        <input type="date" value=@Model.DhCriacao.ToString("yyyy-MM-dd") name="dhCriacao" class="form-control" />
                    }
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-12" style="align-content:center">
                    @Html.LabelFor(model => model.FlAtivo)
                    @Html.CheckBoxFor(model => model.FlAtivo, new { @class = "checkbox" })
                </div>
            </div>

            <div>
                @Html.Label("Gênero")
                @Html.DropDownList("IdGenero", String.Empty)
                @Html.ValidationMessageFor(model => model.IdGenero, "", new { @class = "text-danger" })

                @Html.ActionLink("Cadastrar Gênero", "CadastroGenero", "Genero", new { area = "" }, new { @class = "btn btn-secondary btn-sm" })
            </div>

        </div>
        <div class="panel-footer">
            <input type="submit" value="Cadastrar" class="btn btn-success">
            <input type="submit" value="Voltar" class="btn btn-secondary" onClick=" javascript : history.back(-1);">
        </div>

    </div>

}


@section scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}