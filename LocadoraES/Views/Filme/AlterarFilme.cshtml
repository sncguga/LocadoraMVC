
@model LocadoraES.Models.Filme
@{
    ViewBag.Title = "AlterarFilme";
}

@using (Html.BeginForm("AlterarFilme", "Filme"))
{
    @Html.AntiForgeryToken()
    <br />
    <br />
    <br />
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h4>Preencha os dados dos filmes</h4>
        </div>
        <div class="panel-body">
            <div hidden>
                @Html.LabelFor(model => model.Id)
                @Html.TextBoxFor(model => model.Id)
            </div>
            <div class="row">
                <div class="form-group col-md-12">
                    @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", placeholder = "Nome do filme" } })
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-12">
                    <label for="DhCriacao">Data de criação</label>
                    @if (Model.DhCriacao.Year < 1500)
                    {
                        <input type="date" value=@DateTime.Now.ToString("yyyy-MM-dd") name="dhCriacao" class="form-control" />
                    }
                    else
                    {
                        <input type="date" value=@Model.DhCriacao.ToString("yyyy-MM-dd") name="dhCriacao" class="form-control" />
                    }
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-12" style="align-content:center">
                    @Html.LabelFor(model => model.FlAtivo)
                    @Html.CheckBoxFor(model => model.FlAtivo, new { @class = "checkbox" })
                </div>
            </div>

            <div>
                @Html.LabelFor(model => model.IdGenero)
                @Html.DropDownList("IdGenero")
                @Html.ValidationMessageFor(model => model.IdGenero)
            </div>
        </div>
        <div class="panel-footer">
            <input type="submit" value="Alterar" class="btn btn-primary">
        </div>
    </div>



}


@section scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}